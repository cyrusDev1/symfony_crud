{% extends 'base.html.twig' %}

{% block body %}
<div class="mx-auto mt-16 max-w-5xl sm:mt-20">
<a href="{{ path('add_user') }}" class="text-white bg-indigo-600 px-3.5 py-2.5">To create new user</a>
<table class="border-collapse border border-slate-400 my-4">
  <thead>
    <tr>
        <th class="border border-slate-300 p-2">    ID</th>
      <th class="border border-slate-300 p-2">First Name</th>
      <th class="border border-slate-300 p-2">Last Name</th>
      <th class="border border-slate-300 p-2">Email</th>
      <th class="border border-slate-300 p-2">Address</th>
      <th class="border border-slate-300 p-2">Phone</th>
      <th class="border border-slate-300 p-2">Gender</th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}
    <tr>
          <td class="border border-slate-300 p-2">{{ user.id }}</td>

      <td class="border border-slate-300 p-2">{{ user.firstname }}</td>
      <td class="border border-slate-300 p-2">{{ user.lastname }}</td>
        <td class="border border-slate-300 p-2">{{ user.email }}</td>
      <td class="border border-slate-300 p-2">{{ user.email }}</td>
        <td class="border border-slate-300 p-2">{{ user.address }}</td>
      <td class="border border-slate-300 p-2">{{ user.sexe }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
